  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Features\PASLocBVT.feature.cs" />
  </ItemGroup>

  <ItemGroup>
    <SpecFlowFeatureFiles Remove="Features\PASLocBVT.feature" />
